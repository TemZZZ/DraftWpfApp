<Window x:Class="DraftWpfApp.SaveRadiocomponentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DraftWpfApp"
        mc:Ignorable="d"
        Title="Save Radiocomponents" Height="130" Width="350" ResizeMode="NoResize" SizeToContent="WidthAndHeight">

    <StackPanel Margin="5">
        <RadioButton Name="saveAllRadioButton" IsChecked="True" Content="Save All Radiocomponents" Margin="5"/>
        <RadioButton Name="saveSelectedRadioButton" Content="Save Selected Radiocomponents" Margin="5"/>

        <StackPanel Orientation="Horizontal">
            <Button Name="saveRadiocomponents" Content="Save Radiocomponents" Margin="5" Width="150"/>
            <Button Name="cancelButton" Content="Cancel" Margin="5" Width="150"/>
        </StackPanel>
    </StackPanel>
</Window>
